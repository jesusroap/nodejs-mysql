<div class="container p-4">
    <div class="row">

        {{#each links}}

            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/links/edit/{{id}}" method="POST">
                            <div class="mb-3">
                                <input type="text" class="form-control" name="title" placeholder="Title" value="{{title}}" autofocus>
                            </div>
                            <div class="mb-3">
                                <input type="url" class="form-control" name="url" placeholder="URL" value="{{url}}">
                            </div>
                            <div class="mb-3">
                                <textarea name="description" class="form-control" rows="2" placeholder="Description">{{description}}</textarea>
                            </div>
                            <div class="mb-3 d-grid gap-2">
                                <button class="btn btn-success">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        {{/each}}

    </div>
</div>